package SEW_3;
/**
 * Das Programm enthält eine Methode welche in einem Satz nach jedem Buchstaben ein Komma und einen Abstand einfügt
 * @author Linus Dehner
 * @version 28.05.2017
 */
public class M_4_1_5_trennen {

/**
 * 
 * @param eingabe holt aus dehm anderen Programm den eingegebenen Satz
 * @return gibt den Satz mit Komma und Beistrichen an
 */
public static String trennen(String eingabe){
	 int laenge;
	 int lang = 0;
	 String plus = ", ";
	 String satz = "";
	 String neu;
	 char zeichen;
	 laenge = eingabe.length();
	 int letzterIndex = laenge - 1;

	 for(;lang < laenge;lang++){
		 if (lang == letzterIndex){
			 zeichen = eingabe.charAt(lang);
			 neu = "" + zeichen;
			 satz = satz + neu;
		 }
		 else{
			 zeichen = eingabe.charAt(lang);
			 neu = "" + zeichen;
			 neu = neu + plus;
			 satz = satz + neu;
		 }
	 }
	 return satz;
	
	
}
}