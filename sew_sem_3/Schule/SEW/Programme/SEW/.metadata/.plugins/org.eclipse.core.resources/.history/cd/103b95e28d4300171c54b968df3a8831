package SEW_3;
import javax.swing.*;
/**
 * In diesem Programm sind sämtliche Methoden zum analysieren von einem Satz
 * @author Linus Dehner
 * @version 28.05.2017
 */
public class M_4_2_2_analyse {

	/**
	 * Die Methode sucht nach einem Buchstaben in dem Satz
	 * @param satz holt den Satz aus dem anderen Programm in die Methode
	 * @param gesucht holt den gesuchten Buchstaben aus dem anderen Programm in die Methode
	 * @return gibt den Index des als ersten gefundenen Buchstabens zurück
	 */
	public static int suchen(String satz, String gesucht){
		 int stelle = -1;
		 int laenge;
		 char zeichen;
		 int lang = 0;
		 char ges = gesucht.charAt(0);
		 laenge = satz.length() - 1;
		 boolean schleife = true;

		 for(;lang <= laenge;lang++){
			 if (schleife == true){
				 zeichen = satz.charAt(lang);
				 if(ges == zeichen){
					 stelle = lang;
					 schleife = false;
				 }
			 }
		 }
		return stelle;
	}
	/**
	 * Die Methode zählt wie oft der Buchstabe in dem Satz vorkommt
	 * @param satz holt den Satz aus dem anderen Programm in die Methode
	 * @param gesucht holt den gesuchten Buchstaben aus dem anderen Programm in die Methode
	 * @return gibt siw Anzahl wie oft der Buchstabe vorkommt zurück
	 */
	public static int buchstabezählen(String satz, String gesucht){
		 int stelle = -1;
		 int laenge;
		 char zeichen;
		 int lang = 0;
		 int anzahl = 0;
		 char ges = gesucht.charAt(0);
		 laenge = satz.length() - 1;

		 for(;lang <= laenge;lang++){
				 zeichen = satz.charAt(lang);
				 if(ges == zeichen){
					 stelle = lang;
					 anzahl++;
				 }
		 }
		return anzahl;
	}
	/**
	 * Die Methode sucht nach einem Buchstaben in dem Satz aber sie ignoriert groß und klein Schreibung
	 * @param satz holt den Satz aus dem anderen Programm in die Methode
	 * @param gesucht holt den gesuchten Buchstaben aus dem anderen Programm in die Methode
	 * @return gibt den Index des als ersten gefundenen Buchstabens zurück
	 */
	public static int ignore(String satz, String gesucht){
		 int stelle = -1;
		 int laenge;
		 char zeichen;
		 int lang = 0;
		 char ges = gesucht.toLowerCase().charAt(0);
		 laenge = satz.length() - 1;
		 boolean schleife = true;

		 for(;lang <= laenge;lang++){
			 if (schleife == true){
				 zeichen = satz.toLowerCase().charAt(lang);
				 if(ges == zeichen){
					 stelle = lang;
					 schleife = false;
				 }
			 }
		 }
		return stelle;
	}
	/**
	 * Die Methode sucht nach dem kleinsten Buchstaben in dem Satz und gibt den Index davon zurückgibt den Index des kleinsten Buchstabens zurück
	 * @param satz holt den Satz aus dem anderen Programm in die Methode
	 * @return gibt den Index des kleinsten Buchstabens zurück
	 */
	public static int kleinsterBuchstabe(String satz){
		String neusatz = satz.toLowerCase();
		 int laenge;
		 int lang2 = 0;
		 char z = 'z';
		 char zeichen = '0';
		 int lang = 0;
		 laenge = satz.length() - 1;

		 for(;lang <= laenge;lang++){
				 zeichen = neusatz.charAt(lang);
				 if('a' <= zeichen && zeichen < z + 1) {
					 z = zeichen;
					 lang2 = lang;
				 }
		 }
		return lang2;
	}
	public static int größterBuchstabe(String satz){
		String neusatz = satz.toLowerCase();
		 int laenge;
		 int lang2 = 0;
		 char a = 'a';
		 char zeichen = '0';
		 int lang = 0;
		 laenge = satz.length() - 1;

		 for(;lang <= laenge;lang++){
				 zeichen = neusatz.charAt(lang);
				 if(a <= zeichen && zeichen <= 'z') {
					 a = zeichen;
					 lang2 = lang;
				 }
		 }
		return lang2;
	}

}
